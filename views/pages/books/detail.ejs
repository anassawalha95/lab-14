<main>
    <% Book.forEach(element=> { %>
        <div class="book">
            <img src="<%= element.img_url %>" alt="" class="book-cover">
            <h2 class="book-title">
                <%= element.title %>
            </h2>
            <h6 class="book-author">
                <%= element.author %>
            </h6>
            <p class="book-description">
                <%= element.description.split(" ").slice(0,30).join(" ")+ " ..." %>
            </p>
            <p class="book-isbn">
                <%= element.isbn %>
            </p>
            <p class="book-shelf">
                <%= element.book_shelf %>
            </p>
            <form action="/books/edit/<%= element.id %>" method="post">
                <input type="submit" class="book-btn" value="Update Book">
            </form>
            <form action="/deleteBook/<%= element.id %>?method=delete" method="post">
                <input type="submit" class="book-btn" value="Delete Book">
            </form>
        </div>


        <% }); %>
</main>